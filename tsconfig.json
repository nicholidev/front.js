{
  "compilerOptions": {
    "lib": ["esnext", "dom", "dom.iterable"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "react",

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,

    "target": "es2018",
    "module": "commonjs",
    "outDir": "build/@remix-run",
    "declaration": true,
    "sourceMap": true
  },
  "include": ["types/**/*", "packages/**/*"],
  "exclude": [
    "node_modules",
    "**/__tests__/**",
    "**/__fixtures__/**",
    "**/__snapshots__/**"
  ]
}
