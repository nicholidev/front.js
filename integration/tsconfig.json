{
  "exclude": ["helpers/*-template"],
  "compilerOptions": {
    "lib": ["ES2019"],
    "target": "ES2019",
    "module": "CommonJS",
    "skipLibCheck": true,

    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "resolveJsonModule": true,

    "noEmit": true,

    "rootDir": "."
  },
  "references": [
    { "path": "../packages/remix-express" },
    { "path": "../packages/remix-react" },
    { "path": "../packages/remix-server-runtime" }
  ]
}
