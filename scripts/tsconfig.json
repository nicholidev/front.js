{
  "extends": "../tsconfig.json",
  "include": ["."],
  "exclude": ["./deployment-test", "./playground/template/**/*"],
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "noEmit": true,
    "strict": true,
    "target": "ES2018"
  }
}
