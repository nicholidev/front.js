{
  "compilerOptions": {
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "moduleResolution": "Node",
    "target": "ES2020",
    "module": "ES2020",
    "strict": true,
    "paths": {
      "~/*": ["./*"]
    },

    // Remix takes care of building everything in `remix build`.
    "noEmit": true
  }
}
