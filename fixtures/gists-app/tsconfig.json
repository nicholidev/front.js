{
  "include": ["remix.env.d.ts", "**/*.ts", "**/*.tsx"],
  "compilerOptions": {
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "target": "ES2020",
    "module": "ES2020",
    "baseUrl": ".",
    "strict": true,
    "paths": {
      "~/*": ["app/*"]
    },

    // Remix takes care of building everything in `remix build`.
    "noEmit": true
  }
}
