{
  "name": "gists-app",
  "version": "1.0.0",
  "scripts": {
    "prebuild": "cp -r ../../build/node_modules/* node_modules",
    "build": "cross-env NODE_ENV=production node node_modules/@remix-run/cli build",
    "predev": "cp -r ../../build/node_modules/* node_modules",
    "dev": "concurrently \"node node_modules/@remix-run/cli run\" \"nodemon server.js\"",
    "prestart": "cp -r ../../build/node_modules/* node_modules",
    "start": "cross-env NODE_ENV=production node server.js"
  },
  "dependencies": {
    "@mdx-js/react": "^1.6.18",
    "cross-env": "^7.0.2",
    "express": "^4.17.1",
    "morgan": "^1.10.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router-dom": "^6.0.0-beta.0"
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "nodemon": "^2.0.6"
  }
}
