{
  "include": ["**/*.ts"],
  "exclude": ["dist", "__tests__", "node_modules"],
  "compilerOptions": {
    "lib": ["ES2019", "DOM.Iterable"],
    "target": "ES2019",
    "skipLibCheck": true,
    "composite": true,

    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "rootDir": ".",
    "outDir": "../../build/node_modules/@remix-run/vercel/dist"
  }
}
