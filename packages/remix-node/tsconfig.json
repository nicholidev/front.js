{
  "exclude": ["__tests__"],
  "compilerOptions": {
    "lib": ["ES2019", "DOM.Iterable"],
    "target": "ES2019",

    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,

    "declaration": true,
    "emitDeclarationOnly": true,

    "outDir": "../../build/node_modules/@remix-run/node",
    "rootDir": ".",

    // Avoid naming conflicts between lib.dom.d.ts and globals.ts
    "skipLibCheck": true
  }
}
