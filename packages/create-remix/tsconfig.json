{
  "include": ["**/*.ts"],
  "exclude": ["dist", "**/node_modules/**"],
  "compilerOptions": {
    "lib": ["ES2019", "DOM", "DOM.Iterable"],
    "target": "ES2019",
    "module": "CommonJS",
    "skipLibCheck": true,
    "composite": true,

    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "resolveJsonModule": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "rootDir": ".",
    "outDir": "../../build/node_modules/create-remix/dist"
  }
}
