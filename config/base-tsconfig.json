{
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,

    "esModuleInterop": true,

    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "skipLibCheck": true
  },
  "exclude": ["node_modules", "**/__tests__/**"]
}
