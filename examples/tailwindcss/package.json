{
  "private": true,
  "name": "remix-example-tailwindcss",
  "description": "",
  "license": "",
  "scripts": {
    "build": "npm run build:css && remix build",
    "build:css": "tailwindcss -o ./app/tailwind.css",
    "dev": "concurrently \"npm run dev:css\" \"remix dev\"",
    "dev:css": "tailwindcss -o ./app/tailwind.css --watch",
    "postinstall": "remix setup node",
    "start": "remix-serve build"
  },
  "dependencies": {
    "@remix-run/react": "1.2.3-pre.0",
    "@remix-run/serve": "1.2.3-pre.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "1.2.3-pre.0"
  },
  "devDependencies": {
    "@remix-run/dev": "1.2.3-pre.0",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "concurrently": "^7.0.0",
    "postcss": "^8.4.5",
    "prettier-plugin-tailwindcss": "^0.1.4",
    "tailwindcss": "^3.0.11",
    "typescript": "^4.5.4"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
}
